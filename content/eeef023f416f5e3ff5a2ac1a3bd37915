<h1>How to Write Your Own IM Bot in Less Than 5 Minutes</h1>
<script type="text/javascript">
var google_adnum = 0;
function google_ad_request_done(google_ads) {
 var u = ''; var i;
 if (google_ads.length == 0) {
    return;
  } else {
      for (i = 0; i < google_ads.length; ++i) {
        u += '<span class="t2"><a href="' + google_ads[i].url + '">' + google_ads[i].line1 + '</a></span> <span class="u2"><a href="' + google_ads[i].url + '">' + google_ads[i].visible_url + '</a></span><br /><span class="d2">' + google_ads[i].line2 + ' ' + google_ads[i].line3 + '</span>   ';
       if (i < google_ads.length - 1) u += ' <span class="b2">&nbsp;</span> ';
      }
     u = '<div class="g2"><span class="m2"><a href="' + google_info.feedback_url + '">Ads by Google</a></span> ' + u + '</div>';
    }
   google_adnum = google_adnum + google_ads.length;
  document.write(u);
  return;
}
