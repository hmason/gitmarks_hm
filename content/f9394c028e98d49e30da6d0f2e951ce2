<script language="javascript">

      var strRecurrent = "#CQ_ACTIVATE_RECURRENT_DOC_SET#";

     function mthReplace( strInput )
      {
         //  Used to replace quote with ^ so that the query text can be stored successfully if it contains a quote
         strTemp = "";

         for( intLoop = 0; intLoop < strInput.length; intLoop++ )
         {
            strTemp = strTemp + ( ( strInput.charAt( intLoop ) == '"' ) ? '^' : strInput.charAt( intLoop ) );
         }

         return( strTemp );
      }

      function mthUnReplace( strInput )
      {
         //  Used to convert ^ back to quote for the query text
         strTemp = "";

         for( intLoop = 0; intLoop < strInput.length; intLoop++ )
         {
            strTemp = strTemp + ( ( strInput.charAt( intLoop ) == '^' ) ? '"' : strInput.charAt( intLoop ) );
         }

         return( strTemp );
      }

      function mthAddWeight( strInput )
      {
         //  Used to add a weight to the terms in a query string
         strTemp = "";

         for( intLoop = 0; intLoop < strInput.length; intLoop++ )
         {
            strTemp = strTemp + ( ( strInput.charAt( intLoop ) == ' ' ) ? ':2 ' : strInput.charAt( intLoop ) );
         }
         strTemp = strTemp + ':2';

         return( strTemp );
      }

            function mthPerformSearch()
      {
         // Setup default Query Type of concept with expansion level 3 (exact and variants)
         document.frmSubmitQuery.CQ_QUERY_TYPE.value = "2";
         document.frmSubmitQuery.CQ_EXPANSION_LEVEL.value = "3";
         mthSearch();
      }

      function mthSearch()
      {
         // Performs the actual search by setting variable and submitting the form frmSubmitQuery

         // Local Variables
         var strStoreSearchText = "";
         var strSearchText = "";
         var strSearchType = "";
         var strSearchtag = "";
         var strSearchScope = "";

         // Note - in some cases we have to refer to the numerical position within the Forms array for
         // the selection form, due to the fact that in situations such as a field name CQ_QUERY_TEXT[FIELD]
         // the square brackets cause problems with the naming, hence refered to by number

         // First check we have some Search text
         strSearchText = document.frmSelections.txtQueryText.value;
         strSearchtag = document.frmSelections.txtQueryText.value;

         if( strSearchText == "" )
         {
            alert( "Please enter text to search upon." );
            document.frmSelections.txtQueryText.focus();
            return;
         }

         // Store the clean text before we change it for display in results list
         // Encode any quotes found
         strStoreSearchText = mthReplace(strSearchText);
         document.frmSubmitQuery[6].value = strStoreSearchText;
         strSearchtag = mthAddWeight(strSearchtag);

         // Set sort type to relevance

         document.frmSubmitQuery[16].value = "3";

         // Set the library

         document.frmSubmitQuery.CQ_CUR_LIBRARY.value = "dti1_lib";

         // Set the summary type to query hit mode, three sentences, use the values below.
         // For the summary type centre hit mode, use the values 5, 1, 3, and 120

         document.frmSubmitQuery[11].value = "3";
         document.frmSubmitQuery[12].value = 0;
         document.frmSubmitQuery[13].value = "3";
         document.frmSubmitQuery[14].value = "256";

         // Set the search string in the submission form and send the request

         document.frmSubmitQuery.CQ_QUERY_STRING.value = strSearchText;
         document.frmSubmitQuery[20].value = strSearchtag;
         document.frmSubmitQuery[21].value = strSearchtag;
         document.frmSubmitQuery[22].value = strSearchtag;
         document.frmSubmitQuery[23].value = strSearchtag;
         document.frmSubmitQuery[24].value = strSearchtag;
         document.frmSubmitQuery[25].value = strSearchtag;
         document.frmSubmitQuery[26].value = strSearchtag;
         document.frmSubmitQuery[27].value = strSearchtag;
         document.frmSubmitQuery[28].value = strSearchtag;
         document.frmSubmitQuery[29].value = strSearchtag;
         document.frmSubmitQuery[30].value = strSearchtag;
         document.frmSubmitQuery[31].value = strSearchtag;
         document.frmSubmitQuery[32].value = strSearchtag;
         document.frmSubmitQuery[33].value = strSearchtag;
         document.frmSubmitQuery[34].value = strSearchtag;
         document.frmSubmitQuery[35].value = strSearchtag;
         document.frmSubmitQuery[36].value = strSearchtag;
         document.frmSubmitQuery.submit();
      }

   </script>



