								<div id="homePieChart" style="width:60px;height:60px;"></div>
								<script type="text/javascript">

									/* required modules for the basic chart */
									dojo.require('dojox.charting.widget.Chart2D');
									dojo.require('dojox.charting.themes.ThreeD');

									/* when ready... */
									dojo.ready(function() {
										
										setTimeout(function() {
										
										/* build the chart */
										var pieChart = new dojox.charting.Chart2D('homePieChart');
										pieChart.setTheme(dojox.charting.themes.ThreeD);
										pieChart.addPlot('default', {
											type: 'Pie',
											radius: 19,
											labels: false
										});
										pieChart.addSeries('January',[1,3,3,2]);
										//new dojox.charting.action2d.Highlight(pieChart,'default');
										//new dojox.charting.action2d.Tooltip(pieChart,'default');
										pieChart.render();
										
										},200);

									});
								</script>
