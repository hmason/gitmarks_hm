function change_location(whereto,selectname) {
	if (whereto && whereto!="") {
		this.location.href = whereto;
	}
	else {
		var handle = eval("document.forms[1]."+selectname+"");
		handle.selectedIndex = 0;
	}
}

function change_location_gobutton(selectname) {
	if (selectname && selectname!="") {
		var handle = eval("document.forms[1]."+selectname+"");
		if (handle.selectedIndex!=0 && handle.options[handle.selectedIndex].value!="") {
			var hos = location.hostname
			var pos = hos.indexOf("search");
			if (pos>=0) {
				var loc =  handle.options[handle.selectedIndex].value;
				var pos = loc.indexOf("http://");
				if (pos>=0) {
					this.location.href = handle.options[handle.selectedIndex].value;
				}
				else
				{
					var pos = hos.indexOf("searchdev");
					if (pos>=0) {
						var loc = "http://webarchive.nationalarchives.gov.uk/+/http://dev1.dti.gov.uk"   + handle.options[handle.selectedIndex].value;
						this.location.href = loc;
