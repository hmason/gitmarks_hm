<script language="JavaScript" type="text/javascript">
	
	function writeTitle()
		{
			
			var docTitle = document.title;
			var h1s;
			
			if (document.getElementsByTagName)
				{
					h1s = document.getElementsByTagName("h1");
				}
			else if (document.all.tags)
				{
					h1s = document.all.tags("h1");
				}
			
			if (h1s)
				{
					for (i=0;i<h1s.length;i++)
						{
							if (h1s[i].innerText)
								{
									if (h1s[i].innerText != '')
										{
											if (docTitle != '') {docTitle += " | "};
											docTitle += h1s[i].innerText;
											break;
										}
								}
						}
				}
			
			document.forms["MYLINKS"].LinkName.value = docTitle.replace("\"","&quot;");
			
			//alert(document.forms["MYLINKS"].LinkName.value);
			
		}
</script>
